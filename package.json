{
  "name": "moon",
  "license": "MIT",
  "version": "0.0.1",
  "description": "Open-Source Media Management System designed for Home Theaters",
  "author": {
    "name": "Mallory SCOTTON",
    "email": "mscotton.pro@gmail.com",
    "url": "https://github.com/mallory-scotton"
  },
  "keywords": [
    "media-management",
    "media-server",
    "media-player",
    "api",
    "home-theater"
  ],
  "repository": {
    "type": "github",
    "url": "https://github.com/mallory-scotton/moon-server"
  },
  "main": "dist/electron/main.js",
  "scripts": {
    "start": "npx tsx src/index.ts",
    "build": "npx tsc --project tsconfig.json",
    "electron": "npm run build && electron ."
  },
  "build": {
    "appId": "com.mallory-scotton.moon",
    "productName": "Moon Media Server",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "node_modules/@ffmpeg-installer/ffmpeg/ffmpeg",
        "to": "ffmpeg"
      },
      {
        "from": "node_modules/@ffprobe-installer/ffprobe/ffprobe", 
        "to": "ffprobe"
      }
    ],
    "mac": {
      "category": "public.app-category.entertainment"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/ini": "^4.1.1",
    "@types/node": "^22.15.29",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "axios": "^1.9.0",
    "body-parser": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "http": "^0.0.1-security",
    "ini": "^5.0.0",
    "joi": "^17.13.3",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7"
  }
}
