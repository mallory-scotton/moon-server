{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
